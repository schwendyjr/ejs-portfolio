<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= project.title %></title>
    <link rel="stylesheet" href="/style.css">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>


</head>
<body onload="scrollToPortfolio()">
    <header class="l-header">
        <nav class="nav bd-grid">
            <div>
                <a href="/" class="nav-logo">Parker Schwendeman</a>
            </div>
            <div class="nav-menu" id="nav-menu">
                <ul class="nav-list">
                    <li class="nav-item"><a href="/" class="nav-link">Home</a></li>
                    <li class="nav-item"><a href="/#about" class="nav-link">About</a></li>
                    <li class="nav-item"><a href="/#skills" class="nav-link">Skills</a></li>
                    <li class="nav-item"><a href="/#portfolio" class="nav-link">Portfolio</a></li>
                    <li class="nav-item"><a href="/#contact" class="nav-link">Contact</a></li>
                </ul>
            </div>
            <div class="nav-toggle" id="nav-toggle">
                <i class='bx bx-menu'></i>
            </div>
        </nav>
    </header>

    <main class="l-main">
        <section class="portfolio section" id="portfolio">
            <h2 class="section-title">Portfolio</h2>
            <div class="portfolio-container bd-grid">
                <div class="portfolio-img">
                    <img src="<%= project.image %>" alt="<%= project.title %>">
                </div>
                <div class="portfolio-content">
                    <h2><%= project.title %></h2>
                    <p><%= project.details %></p>
                    <a href="<%= project.link %>" class="portfolio-link-name" target="_blank">View Live Project</a>
                </div>
            </div>
        </section>

        <section class="about section" id="about">
            <h2 class="section-title">About</h2>
            <div class="about-container bd-grid">
                <div class="about-img">
                    <img src="/garden.png" alt="Parker Schwendeman">
                </div>
                <div>
                    <h2 class="about-subtitle">I believe with great design, anything is possible.</h2>
                    <p class="about-text">Hello, Iâ€™m Parker Schwendeman, a Digital Design and Development graduate from BCIT.</p>
                    <div class="about-social">
                        <a href="https://www.linkedin.com/in/parker-schwendeman/" class="about-social-icon"><i class='bx bxl-linkedin'></i></a>
                        <a href="https://github.com/schwendyjr" class="about-social-icon"><i class='bx bxl-github'></i></a>
                        <a href="https://www.instagram.com/tamedogdesign" class="about-social-icon"><i class='bx bxl-instagram'></i></a>
                    </div>
                </div>
            </div>
        </section>

        <section class="skills section" id="skills">
            <h2 class="section-title">Skills</h2>
            <div class="skills-container bd-grid">
                <div class="skills-box">
                    <h3 class="skills-subtitle">Development</h3>
                    <span class="skills-name">HTML</span>
                    <span class="skills-name">CSS</span>
                    <span class="skills-name">JavaScript</span>
                    <span class="skills-name">Node.js</span>
                    <span class="skills-name">React</span>
                    <span class="skills-name">Next.js</span>
                    <span class="skills-name">GitHub</span>
                </div>
            </div>
        </section>

        <section class="contact section" id="contact">
            <h2 class="section-title">Contact</h2>
            <div class="contact-container bd-grid">
                <div class="contact-info">
                    <h3 class="contact-subtitle">EMAIL</h3>
                    <span class="contact-text">tamedogdesign@gmail.com</span>
                    <h3 class="contact-subtitle">PHONE</h3>
                    <span class="contact-text">778-246-6070</span>
                    <h3 class="contact-subtitle">ADDRESS</h3>
                    <span class="contact-text">Vancouver, BC, Canada</span>
                </div>
                <form action="/send-message" method="POST" class="contact-form">
                    <div class="contact-inputs">
                        <input type="text" name="name" placeholder="Name" class="contact-input">
                        <input type="email" name="email" placeholder="Email" class="contact-input">
                    </div>
                    <textarea name="message" cols="0" rows="10" class="contact-input"></textarea>
                    <input type="submit" value="Send" class="contact-button">
                </form>
            </div>
        </section>
    </main>

    <footer class="footer section">
        <div class="footer-container bd-grid">
            <div class="footer-data">
                <h2 class="footer-title">Parker Schwendeman</h2>
                <ul>
                    <li><a href="/" class="footer-link">Home</a></li>
                    <li><a href="/#about" class="footer-link">About</a></li>
                    <li><a href="/#skills" class="footer-link">Skills</a></li>
                    <li><a href="/#contact" class="footer-link">Contact</a></li>
                </ul>
            </div>
            <div class="footer-data">
                <h2 class="footer-title">FOLLOW</h2>
                <a href="https://www.instagram.com/tamedogdesign" class="footer-social"><i class='bx bxl-instagram'></i></a>
                <a href="https://www.linkedin.com/in/parker-schwendeman/" class="footer-social"><i class='bx bxl-linkedin'></i></a>
            </div>
        </div>
    </footer>

    <script>
        function scrollToPortfolio() {
            window.location.hash = "#portfolio";
        }
    </script>
    <script src="https://unpkg.com/scrollreveal"></script>
    <script src="/script.js"></script>
</body>
</html>
