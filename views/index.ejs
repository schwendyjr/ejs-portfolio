            </div>
        </section>

        <section class="skills section" id="skills">
            <h2 class="section-title">Skills</h2>

            <div class="skills-container bd-grid">
                <div class="skills-box">
                    <h3 class="skils-subtitle">Development</h3>

                    <span class="skills-name">HTML</span>
                    <span class="skills-name">CSS</span>
                    <span class="skills-name">JAVASCRIPT</span>
                    <span class="skills-name">NODE</span>
                    <span class="skills-name">REACT</span>
                    <span class="skills-name">NEXT.JS</span>
                    <span class="skills-name">GITHUB</span>
                    
                    <h3 class="skils-subtitle">Design</h3>

                    <span class="skills-name">FIGMA</span>
                    <span class="skills-name">ILLUSTRATOR</span>
                    <span class="skills-name">PHOTOSHOP</span>
                    <span class="skills-name">AFTER EFFECTS</span>
                    <span class="skills-name">PREMIERE PRO</span>


                </div>

                <div class="skills-img">
                    <img src="placeholder-image.jpg" alt="skills image">
                </div>
            </div>
        </section>

        <section class="portfolio section" id="portfolio">
            <h2 class="section-title">Portfolio</h2>

            <div class="portfolio-container bd-grid">
                <div class="portfolio-img">
                    <img src="placeholder-image.jpg" alt="work image">

                    <div class="portfolio-link">
                        <a href="#" class="portfolio-link-name">View Details</a>
                    </div>
                </div>

                <div class="portfolio-img">
                    <img src="placeholder-image.jpg" alt="work image">

                    <div class="portfolio-link">
